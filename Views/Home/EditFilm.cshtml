@{
    ViewBag.Title = "The Joel Hilton Film Collection";
    ViewBag.Dash = " - ";
    ViewBag.SubTitle = "Edit a Movie";
}
@model Movie

<h5>Editing Movie: @Model.movieID</h5>

<h1>@ViewBag.SubTitle Below</h1>

<p>Use the form below to edit a movie in my collection</p>


<div>
    <form asp-controller="Home" asp-action="EditFilm" method="post">
        <input type="hidden" asp-for="@Model.movieID" />
        <div>
            <label asp-for="@Model.category">
                Category
            </label>
            <input asp-for="@Model.category" />
        </div>

        <div>
            <label asp-for="@Model.title">
                Title
            </label>
            <input asp-for="@Model.title" />
        </div>

        <div>
            <label asp-for="@Model.year">
                Year
            </label>
            <input asp-for="@Model.year" />
        </div>

        <div>
            <label asp-for="@Model.director">
                Director
            </label>
            <input asp-for="@Model.director" />
        </div>

        <div>
            <label asp-for="@Model.rating">
                Rating
            </label>
            <select asp-for="@Model.rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div>
            <label asp-for="@Model.edited">
                Edited?
            </label>
            <select asp-for="@Model.edited">
                <option value="">Select One</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <div>
            <label asp-for="@Model.lent">
                Lent To:
            </label>
            <input asp-for="@Model.lent" />
        </div>

        <div>
            <label asp-for="@Model.notes">
                Notes
            </label>
            <input asp-for="@Model.notes" />
        </div>

        <button type="submit">Submit</button>
        <div asp-validation-summary="All" class="text-danger">

        </div>
    </form>
</div>
