@{
    ViewBag.Title = "The Joel Hilton Film Collection";
    ViewBag.Dash = " - ";
    ViewBag.SubTitle = "Enter a Movie";
}

@model Movie

<h1>@ViewBag.SubTitle Here</h1>

<p>Use the form below to add a new movie to my collection</p>

<div>
    <form asp-action="EnterFilm" method="post">
        <div>
            <label asp-for="category">
                Category
            </label>
            <input asp-for="category"/>
        </div>

        <div>
            <label asp-for="title">
                Title
            </label>
            <input asp-for="title"/>
        </div>

        <div>
            <label asp-for="year">
                Year
            </label>
            <input asp-for="year"/>
        </div>

        <div>
            <label asp-for="director">
                Director
            </label>
            <input asp-for="director"/>
        </div>

        <div>
            <label asp-for="rating">
                Rating
            </label>
            <select asp-for="rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>

        <div>
            <label asp-for="edited">
                Edited?
            </label>
            <select asp-for="edited">
                <option value="">Select One</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
            </select>
        </div>

        <div>
            <label asp-for="lent">
                Lent To:
            </label>
            <input asp-for="lent"/>
        </div>

        <div>
            <label asp-for="notes">
                Notes
            </label>
            <input asp-for="notes"/>
        </div>

        <button type="submit">Add Movie</button>
        <div asp-validation-summary="All" class="text-danger">

        </div>
    </form>
</div>
