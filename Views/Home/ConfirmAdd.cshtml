@{
    ViewBag.Title = "The Joel Hilton Film Collection";
    ViewBag.Dash = " - ";
    ViewBag.SubTitle = " Added";
    ViewBag.MovieTitle = Model.title;
}

<h1>@Model.title @ViewBag.SubTitle!</h1>

<h5>You have added the movie "@Model.title" to my collection.</h5>
<br /><br />
<h3>Would you like to add another movie or see the collection?</h3>

<a class="btn btn-primary" asp-controller="Home" asp-action="EnterFilm">Add another Movie</a>

<a class="btn btn-primary" asp-controller="Home" asp-action="FilmList">See Movie Collection</a>

